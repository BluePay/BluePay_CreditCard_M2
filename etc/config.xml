<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <bluepay_creditcard>
                <active>1</active>
                <title>Credit Card</title>
                <account_id backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <secret_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <cctypes>AE,VI,MC,DI,JCB</cctypes>
                <debug>0</debug>
                <model>BluePay\CreditCard\Model\CCPayment</model>
                <order_status>processing</order_status>
                <payment_action>AUTH</payment_action>
                <trans_mode>TEST</trans_mode>
                <test>1</test>
                <useccv>1</useccv>
                <usecvv_backend>0</usecvv_backend>
                <allowspecific>0</allowspecific>
                <currency>USD</currency>
                <duplicate_check>0</duplicate_check>
                <use_iframe>0</use_iframe>
            </bluepay_creditcard>
        </payment>
    </default>
</config>
